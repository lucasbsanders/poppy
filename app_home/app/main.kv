#: import rgba kivy.utils.rgba
#: import icon kivy.garden.iconfonts.icon
#: import mtx kivy.metrics
#: import NavigationDrawer kivy.garden.navigationdrawer.NavigationDrawer


<MainWindow>:
	orientation: 'vertical'
	canvas.before:
		Color:
			rgba: [1,1,1,1]
		Rectangle:
			pos: self.pos
			size: self.size
	ScreenManager:
	    id: scrn_mngr
	    Screen:
	        name: 'scrn_signin'
	        BoxLayout:
				orientation: 'vertical'	
				canvas.before:
					Color:
						rgba: rgba('#0e1574ff')
					Triangle:
						points: [0, self.size[1], self.size[0], self.size[1], 0, self.size[1]-(.4*self.size[1])]
					Color:
						rgba: rgba('#0e1574c8')
					Triangle:
						points: [0, self.size[1], self.size[0], self.size[1], self.size[0], self.size[1]-(.4*self.size[1])]
				Widget:
					size_hint_y: .25

				Label:
					text: '%s'%icon('zmdi-account-circle')
					font_size: mtx.sp('154')
					markup: True
					color: rgba('#0e1574ff')
					size_hint_y: .3
				BoxLayout:
					size_hint_y: .45
					orientation: 'vertical'
					padding: [mtx.dp(20), 0]
					# Widget: 

					FlatInput: 
						id: si_username
						hint_text: 'username'
						size_hint_y: .1

					Widget: 
						size_hint_y: .1
					FlatInput: 
						id: si_password
						hint_text: 'password'
						password: True
						size_hint_y: .1
					Widget:
						size_hint_y: .3
					FlatButton: 
						text: 'Sign in'
						size_hint_y: .2
						# on_release: root.auth_user(si_username, si_password)
						on_release: scrn_mngr.current = 'scrn_main'
						canvas.before:
							Color:
								rgba: rgba('#0e1574ff')
							RoundedRectangle:
								pos: self.pos
								size: self.size
								radius: [8]
					FlatButton:
						text: 'New here? Sign up'
						size_hint_y: .1
						color: rgba('#0e1574ff')
						on_release: scrn_mngr.current = 'scrn_signup'
					Widget:
						size_hint_y: .1
		Screen:
	        name: 'scrn_signup'
	        BoxLayout:
	            orientation: 'vertical'
				canvas.before:
					Color:
						rgba: rgba('#0e1574ff')
					Rectangle:
						pos: self.pos
						size: self.size
					Color:
						rgba: rgba('#ffffff')
					Triangle:
						points: [0, self.size[1], self.size[0], self.size[1], 0, self.size[1]-(.4*self.size[1])]
					Color:
						rgba: rgba('#f2f2f2')
					Triangle:
						points: [0, self.size[1], self.size[0], self.size[1], self.size[0], self.size[1]-(.4*self.size[1])]
				Widget:
					size_hint_y: .25

				Label:
					text: '%s'%icon('zmdi-account-circle')
					font_size: mtx.sp('154')
					markup: True
					color: rgba('#ffffff')
					size_hint_y: .3
				BoxLayout:
					size_hint_y: .45
					orientation: 'vertical'
					padding: [mtx.dp(20), 0]
					# Widget: 

					WhiteInput: 
						id: su_username
						hint_text: 'username'
						size_hint_y: .1

					Widget: 
						size_hint_y: .1
					WhiteInput: 
						id: su_password
						hint_text: 'password'
						password: True
						size_hint_y: .1
					Widget:
						size_hint_y: .3
					FlatButton: 
						text: 'Sign Up'
						size_hint_y: .2
						color: rgba('#0e1574ff')
						on_release: root.add_user(su_username, su_password)
						canvas.before:
							Color:
								rgba: rgba('#ffffff')
							RoundedRectangle:
								pos: self.pos
								size: self.size
								radius: [8]
					FlatButton:
						text: 'Already a user? Sign in'
						size_hint_y: .1
						color: rgba('#ffffff')
						on_release: scrn_mngr.current = 'scrn_signin'
					Widget:
						size_hint_y: .1
		Screen:
	        name: 'scrn_main'
			NavigationDrawer:
				id: nav
				anim_type: 'slide_above_simple'
				side_panel_width: .7*self.width
				BoxLayout:
					id: sidenav
					orientation: 'vertical'
					padding: mtx.dp(10)
					canvas.before:
						Color: 
							rgba: rgba('#ffffffff')
						Rectangle:
							pos: self.pos
							size: self.size
					ListEntry:
						text: '%s Add New' %icon('zmdi-edit')
						markup: True
						color: rgba('#0e5174')
						size_hint_y: .07
						on_release: 
							nav.toggle_state()
							root.add_new()
					Widget:
					ListEntry:
						text: '%s Go to Cam' %icon('zmdi-camera')
						markup: True
						color: rgba('#0e5174')
						size_hint_y: .07
						on_release: 
							nav.toggle_state()
							scrn_mngr.current = 'scrn_camera'
				BoxLayout:
					orientation: 'vertical'
					id: main_content
					canvas.before:
						Color: 
							rgba: rgba('#0e1574ff')
						Rectangle:
							pos: self.pos
							size: self.size
					

					BoxLayout:
						padding: mtx.dp(10)
						size_hint_y: .1
						FlatButton:
							text: icon('zmdi-apps')
							markup: True
							text_size: self.size
							valign: 'middle'
							font_size: mtx.sp(24)
							on_release: nav.toggle_state()
					BoxLayout:
						orientation: 'vertical'
						canvas.before:
							Color: 
								rgba: rgba('#119cceff')
							RoundedRectangle:
								pos: self.pos
								size: self.size
								radius: [20, 20, 0, 0]
						BoxLayout:
							size_hint_y: .4
							orientation: 'vertical'
							BoxLayout:
								size_hint_y: .1
								padding: [10, 0]
								FlatButton: 
									text: icon('zmdi-arrow-forward')
									font_size: mtx.sp(24)
									markup: True
									size_hint_x: .8
									text_size: self.size
									valign: 'middle'
									on_release: scrn_mngr.current = 'scrn_today'
								
								Label:
									text: 'TODAY'
									bold: True
									size_hint_x:.2
									text_size: self.size
									halign: 'right'
							BoxLayout:
								size_hint_y: .9
								id: scroll_parent
								ScrollView:
									id: sv_today
									do_scroll: [True, False]
									scroll_type: ['content']
									size_hint_y: None
									height: self.parent.height
									effect_cls: 'ScrollEffect'
									GridLayout:
										id: today_wrapper
										rows: 1
										padding: ['10dp', '10dp', '10dp', '20dp']
										spacing: ['10dp']
										size: self.minimum_size
										size_hint: (None, None)
										
										# Today:
										# 	name: 'Task 1 f43vf3f'
										# 	time: '10:24'
										# 	size_hint: (None, None)
										# 	size: [scroll_parent.width/2.4, scroll_parent.height *.9]
										NewButton:
											on_release: root.add_new()
											size_hint: (None, None)
											markup: True
											size: [scroll_parent.width/2.4, scroll_parent.height *.9]
										
						BoxLayout:
							size_hint_y: .6
							orientation: 'vertical'
							spacing: mtx.dp(5)
							canvas.before:
								Color: 
									rgba: rgba('#ffffff')
								RoundedRectangle:
									pos: self.pos
									size: self.size
									radius: [20, 20, 0, 0]
							BoxLayout:
								size_hint_y: .1
								padding: ['10dp', '2dp']
								FlatButton:
									text: icon('zmdi-arrow-forward')
									font_size: mtx.sp(18)
									markup: True
									size_hint_x: .7
									text_size: self.size
									color: rgba('#119cceff')
									valign: 'middle'
									on_release: scrn_mngr.current = 'scrn_upcoming'
								Label:
									text: 'UPCOMING'
									bold: True
									size_hint_x: .3
									color: rgba('#119cceff')
							BoxLayout:
								size_hint_y: .9
								id: upcoming_wrapper
								ScrollView:
									size_hint_y: None
									height: self.parent.height
									GridLayout:
										id: upcoming
										cols: 1
										size_hint_y: None
										size: self.minimum_size
										padding: ['10dp']
										spacing: ['10dp']

		Screen:
			name: 'scrn_camera'
			BoxLayout:
	            orientation: 'vertical'
				BoxLayout: 
					size_hint_y: .07
					padding: [mtx.dp(15), mtx.dp(5)]
					FlatButton: 
						text: icon('zmdi-arrow-back')
						markup: True
						color: rgba('#0e1574')
						font_size: mtx.dp(18)
						text_size: self.size
						valign: 'middle'
						size_hint_x: .7
						on_release: scrn_mngr.current = 'scrn_main'
					Label:
						text: 'CAMERA'
						size_hint_x: .3
						text_size: self.size
						halign: 'right'
						valign: 'middle'
						color: rgba('#0e5174')
						bold: True
				BoxLayout:
					size_hint_y: .93
					orientation: 'vertical'
					BoxLayout:
						CameraClick:
						# XCamera:

				

		Screen:
	        name: 'scrn_today'
	        BoxLayout:
	            orientation: 'vertical'
				BoxLayout: 
					size_hint_y: .07
					padding: [mtx.dp(15), mtx.dp(5)]
					FlatButton: 
						text: icon('zmdi-arrow-back')
						markup: True
						color: rgba('#0e1574')
						font_size: mtx.dp(18)
						text_size: self.size
						valign: 'middle'
						size_hint_x: .7
						on_release: scrn_mngr.current = 'scrn_main'
					Label:
						text: 'TODAY'
						size_hint_x: .3
						text_size: self.size
						halign: 'right'
						valign: 'middle'
						color: rgba('#0e5174')
						bold: True
				BoxLayout:
					size_hint_y: .93
					ScrollView:
						size_hint_y: None
						height: self.parent.height
						GridLayout:
							id: all_today
							cols: 2
							size_hint_y: None
							size: self.minimum_size
							padding: mtx.dp(10)
							spacing: mtx.dp(10)
		Screen:
	        name: 'scrn_upcoming'
	        BoxLayout:
	            orientation: 'vertical'
				BoxLayout: 
					size_hint_y: .07
					padding: [mtx.dp(15), mtx.dp(5)]
					FlatButton: 
						text: icon('zmdi-arrow-back')
						markup: True
						color: rgba('#0e1574')
						font_size: mtx.dp(18)
						text_size: self.size
						valign: 'middle'
						size_hint_x: .7
						on_release: scrn_mngr.current = 'scrn_main'
					Label:
						text: 'UPCOMING'
						size_hint_x: .3
						text_size: self.size
						halign: 'right'
						valign: 'middle'
						color: rgba('#0e5174')
						bold: True
				BoxLayout:
					size_hint_y: .93
					ScrollView:
						size_hint_y: None
						height: self.parent.height
						GridLayout:
							id: all_upcoming
							cols: 1
							size_hint_y: None
							size: self.minimum_size
							padding: mtx.dp(10)
							spacing: mtx.dp(10)
<ListEntry@FlatButton>:
	text_size: self.size
	valign: 'middle'
	canvas.before:
		Color:
			rgba: rgba('#dfdfdf')
		Rectangle:
			pos: self.pos
			size: [self.size[0], mtx.dp(1)]
<ViewTask>:
	size_hint: [.8, .7]
	BoxLayout:
		orientation: 'vertical'
		padding: mtx.dp(15)
		canvas.before:
			Color:
				rgba: [1,1,1,1]
			RoundedRectangle: 
				pos: self.pos
				size: self.size
				radius: [mtx.dp(10)]
		TextInput:
			id: name
			background_disabled_normal: ''
			background_color:[0,0,0,0]
			disabled_foreground_color: rgba('#0e5174')
			disabled: True
			size_hint_y: .7
		
		BoxLayout: 
			size_hint_y: .3
			orientation: 'vertical'
			BoxLayout:
				
				Label: 
					text: 'Date:'
					bold: True
					color: rgba('#0e5174')
					size_hint_x: .4
					text_size: self.size
					valign: 'middle'
				Label:
					id: date
					color: rgba('#0e5174')
					size_hint_x: .6
					text_size: self.size
					valign: 'middle'
			BoxLayout:
				Label: 
					text: 'Time:'
					bold: True
					color: rgba('#0e5174')
					size_hint_x: .4
					text_size: self.size
					valign: 'middle'
				Label:
					id: time
					color: rgba('#0e5174')
					size_hint_x: .6
					text_size: self.size
					valign: 'middle'
<NewTask>:
	size_hint: [.8, .5]
	BoxLayout:
		orientation: 'vertical'
		spacing: '12dp'
		padding: '10dp'
		canvas.before:
			Color:
				rgba: [1,1,1,1]
			RoundedRectangle:
				pos: self.pos
				size: self.size
				radius: [5]
		BoxLayout:
			size_hint_y: .15
			padding: '4dp'
			FlatInput: 
				id: task_name
				hint_text: 'task name'
				hint_text_color: rgba('#0e1574ff')
		Widget:
			size_hint_y: .16
		BoxLayout:
			id: datetime
			size_hint_y: .15
			padding: '4dp'
			# DatePicker: 
			# 	id: task_date
			# 	size_hint_x: .7
			# 	background_active: ''
			# 	background_normal: ''
			# 	background_color: [1,1,1,0]
			# 	canvas.before:
			# 		Color:
			# 			rgba: rgba('#0e1574ff')
			# 		Rectangle:
			# 			pos: self.pos
			# 			size: [self.size[0], 1]
			FlatButton:
				id: task_time
				text: '00:00:00'
				size_hint_x: .3
				color: rgba('#0e1574')
				on_release: root.get_time()

		Widget:
			size_hint_y: .3
		BoxLayout:
			id: submit_wrapper
			size_hint_y: .24
			FlatButton:
				text: 'Submit'
				# on_release: app.root.add_task(root, (task_name, task_date, task_time))
				on_release: app.root.add_task(root, (task_name, task_time))
				canvas.before:
					Color:
						rgba: rgba('#0e1574ff')
					RoundedRectangle:
						pos: self.pos
						size: self.size

<Upcoming>:
    orientation: 'vertical'
    padding: [mtx.dp(30), mtx.dp(10), mtx.dp(10), mtx.dp(8)]
    canvas.before:
        Color:
            rgba: rgba('#0088aafd')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [0,mtx.dp(25), 0, 0]
        Color:
            rgba: rgba('#aa0088ff')
        Rectangle:
            pos: self.pos
            size: [self.size[0]-(.95*self.size[0]), self.size[1]]
    Label:
        text: root.name
        bold: True
        text_size: self.size
        valign: 'middle'
        color: rgba('#000000')
        size_hint_y: .3
        font_size: mtx.sp(18)
    Label:
        text: root.time
        text_size: self.size
        valign: 'middle'
        color: rgba('#000000')
        size_hint_y: .2
        font_size: mtx.sp(14)
    AnchorLayout:
        size_hint_y: .5
        anchor_x: 'right'
        anchor_y: 'bottom'
        BoxLayout:
            size_hint_x: .4
            # FlatButton:
            #     text: icon('zmdi-refresh')
            #     font_size: mtx.sp(18)
            #     markup: True
            #     on_release: app.root.get_update(root)
            FlatButton:
                text: icon('zmdi-delete')
                font_size: mtx.sp(18)
                markup: True
                on_release: app.root.delete_task(root)

<Today>:
	orientation: 'vertical'
	padding: '15dp'
	canvas.before:
		Color:
			rgba: rgba('#ff9955ff')
		RoundedRectangle:
			pos: self.pos
			size: self.size
			radius: [20]
	Label:
		id: task_name
		text: root.name
		size_hint_y: .15
		bold: True
		font_size: '16sp'
		color: rgba('#4a4a4a')
		text_size: self.size
		shorten: True
		shorten_from: 'right'
		halign: 'right'
	BoxLayout:
		size_hint_y: .1
		Label: 
			text: icon('zmdi-time-countdown')
			markup: True
			size_hint_x: .45
			text_size: self.size
			halign: 'right'
			color: rgba('#4a4a4a')
		Label:
			id: task_time
			text: root.time
			size_hint_x: .55
			color: rgba('#4a4a4a')
			halign: 'right'
			text_size: self.size
	AnchorLayout:
		anchor_x: 'right'
		anchor_y: 'bottom'
		size_hint_y: .75
		BoxLayout:
			size_hint_x: .4
			# FlatButton:
			# 	text: icon('zmdi-refresh')
			# 	font_size: '24sp'
				
			# 	markup: True
			# 	color: rgba('#4a4a4a')
			# 	on_release: app.root.get_update(root)
			FlatButton:
				text: icon('zmdi-delete')
				font_size: '24sp'
				
				markup: True
				color: rgba('#4a4a4a')
				on_release: app.root.delete_task(root)
<CameraClick>:
    orientation: 'vertical'
    Camera:
        id: camera
        resolution: (480, 640)
        play: True
		canvas.before:
            PushMatrix
            Rotate:
                angle: -90
                origin: self.center
        canvas.after:
            PopMatrix
    ToggleButton:
        text: 'Play'
        on_press: camera.play = not camera.play
        size_hint_y: None
        height: '48dp'
    Button:
        text: 'Capture'
        size_hint_y: None
        height: '48dp'
        on_press: root.capture()
	
<NewButton>:
	canvas.before:
		Color:
			rgba: rgba('#ff9955c8')
		RoundedRectangle:
			pos: self.pos
			size: self.size
			radius: [20]
	Label: 
		text: icon('zmdi-plus')
		font_size: mtx.sp(56)
		markup: True

<FlatButton@Button>:
	background_normal: ''
	background_color: [1,1,1,0]
<FlatInput@TextInput>:
	background_active: ''
	background_normal: ''
	background_color: [1,1,1,0]
	canvas.before:
		Color:
			rgba: rgba('#0e1574ff')
		Rectangle:
			pos: self.pos
			size: [self.size[0], 1]
<WhiteInput@TextInput>:
	background_active: ''
	background_normal: ''
	background_color: [1,1,1,0]
	canvas.before:
		Color:
			rgba: rgba('#ffffff')
		Rectangle:
			pos: self.pos
			size: [self.size[0], 1]